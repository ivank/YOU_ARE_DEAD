#!/bin/bash
# YOU ARE DEAD. by rupa 2013. WTFPL.

usage() {
cat<<!
$(basename $0) [options]

KEYS: WASD. YOU ARE DEAD.

-[0-9] SHORT GAME.
    -e ENDLESS MODE.

DVORAK MODE:
    YOU_ARE_DEAD_KEYS=",aoe" ./$(basename $0)

PROTIP TO PREVENT HORRIBLE ACCIDENTS:
   # you must beat a level before you can execute scary_function
   while :; do ./$(basename $0) -1 && break; done
   scary_function
!
}

YOU=x
LEVEL=1
MAX_LEVEL=10
SCORE=0

[ "$YOU_ARE_DEAD_KEYS" ] || YOU_ARE_DEAD_KEYS="wasd"

for x; do case $x in
    -[0-9]) MAX_LEVEL=${x:1};;
    -e) unset MAX_LEVEL;;
    -h|--help) usage; exit;;
esac; shift; done

trap 'tput cnorm -- normal' EXIT
tput civis -- invisible

CHOICES="rps      "

you_win() {
    printf "$DUNGEON\nLEVEL $LEVEL, SCORE $SCORE. YOU WIN. YOU ARE DEAD.\n"
    exit
}

game_over() {
    printf "\nLEVEL $LEVEL, SCORE $SCORE. YOU ARE DEAD.\n"
    exit 1
}

build_dungeon() {
    DUNGEON=" "
    local COUNTER=2
    while [ $COUNTER -le $(tput cols) ]; do
        DUNGEON="$DUNGEON${CHOICES:$((RANDOM % ${#CHOICES})):1}"
        COUNTER=$((COUNTER + 1));
    done
}

build_dungeon

while :; do

    COLS=$(tput cols)
    OLDYOU=$YOU

    printf "$DUNGEON\r%*s$YOU\r" $((SCORE % $COLS))

    read -s -n 1

    case "$REPLY" in
        ${YOU_ARE_DEAD_KEYS:0:1}) YOU=r;;
        ${YOU_ARE_DEAD_KEYS:1:1}) YOU=p;;
        ${YOU_ARE_DEAD_KEYS:2:1}) YOU=s;;
        ${YOU_ARE_DEAD_KEYS:3:1}) YOU=x; SCORE=$((SCORE + 1));;
    esac

    [ "$YOU" = "x" ] || continue

    THING=${DUNGEON:$((SCORE % $COLS)):1}

    case $THING$OLDYOU in
        rs|pr|sp|rx|px|sx) game_over;;
        rr|ss|pp) SCORE=$((SCORE - 1));;
    esac

    [ $((SCORE % $COLS)) = 0 ] && {
        [ "$MAX_LEVEL" -a "$LEVEL" -ge "$MAX_LEVEL" ] && you_win
        LEVEL=$((LEVEL + 1))
        printf "$DUNGEON\nLEVEL $LEVEL\n"
        build_dungeon
    }

done
